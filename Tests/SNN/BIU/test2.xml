<?xml version="1.0" encoding="UTF-8"?>
<NetworkConfig type="BIUNetwork">
  <BIUNetwork>
    <!-- Global defaults -->
    <VTh>0.10</VTh>
	<RLeak>1e6</RLeak>
    <refractory>12</refractory>
  </BIUNetwork>

  <Architecture>
    <!-- Layer 0: 3 neurons, input size = 1 -->
    <Layer size="3">
      <synapses rows="3" cols="1">
        <weights>
          <row>6</row>
          <row>5</row>
          <row>4</row>
        </weights>
      </synapses>

      <!-- Apply a range to all neurons -->
      <NeuronRange start="0" end="2">
        <VTh>0.15</VTh>
        <refractory>10</refractory>
      </NeuronRange>

      <!-- Most-specific tweak: neuron 1 -->
      <Neuron index="1">
        <VTh>0.15</VTh>
      </Neuron>
    </Layer>

    <!-- Layer 1: 7 neurons, input size = 3 -->
    <Layer size="7">
      <synapses rows="7" cols="3">
        <weights>
          <row>7.0 0.0 0.0</row>
          <row>0.0 7.0 0.0</row>
          <row>0.0 0.0 7.0</row>
          <row>7 7 0.0</row>
          <row>5 5 3</row>
          <row>3 0.0 3</row>
          <row>5 10 5</row>
        </weights>
      </synapses>

      <!-- First half [0..3] -->
      <NeuronRange start="0" end="3">
        <VTh>0.18</VTh>
      </NeuronRange>

      <!-- Second half [4..6] -->
      <NeuronRange start="4" end="6">
        <VTh>0.13</VTh>
        <RLeak>1e3</RLeak>
        <refractory>14</refractory>
      </NeuronRange>

      <!-- Override single neuron 6 -->
      <Neuron index="6">
        <VTh>0.19</VTh>
      </Neuron>
    </Layer>
  </Architecture>
</NetworkConfig>
