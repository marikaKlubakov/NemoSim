<?xml version="1.0" encoding="UTF-8"?>
<NetworkConfig type="BIUNetwork">
  <BIUNetwork>
    <!-- Global defaults -->
    <VTh>0.6</VTh>
	<RLeak>500e6</RLeak>
    <refractory>12</refractory>
	<DSClockMHz>10</DSClockMHz>
	<DSBitWidth>4</DSBitWidth> <!-- 4/8 bits -->
	<DSMode>ThresholdMode</DSMode> <!-- ThresholdMode/FrequencyMode -->
  </BIUNetwork>

  <Architecture>
    <!-- Layer 0: 3 neurons, input size = 1 -->
    <Layer size="3">
      <synapses rows="3" cols="8">
        <weights>
          <row>6 5 5 5 5 -5 5 5</row>
          <row>5 -5 5 5 -5 5 5 5</row>
          <row>4 5 5 -5 5 5 5 5</row>
        </weights>
      </synapses>

      <!-- Apply a range to all neurons -->
      <NeuronRange start="0" end="2">
        <VTh>0.5</VTh>
        <RLeak>550e6</RLeak>
        <refractory>10</refractory>
      </NeuronRange>

      <!-- Most-specific tweak: neuron 1 -->
      <Neuron index="1">
        <VTh>0.7</VTh>
      </Neuron>
    </Layer>

    <!-- Layer 1: 7 neurons, input size = 3 -->
    <Layer size="7">
      <synapses rows="7" cols="3">
        <weights>
          <row>7.0 0.0 0.0</row>
          <row>0.0 7.0 0.0</row>
          <row>0.0 0.0 7.0</row>
          <row>7 7 0.0</row>
          <row>0 0 1</row>
          <row>3 0.0 3</row>
          <row>5 10 5</row>
        </weights>
      </synapses>

      <!-- First half [0..3] -->
      <NeuronRange start="0" end="3">
        <VTh>0.2</VTh>
      </NeuronRange>

      <!-- Second half [4..6] -->
      <NeuronRange start="4" end="6">
        <VTh>0.2</VTh>
        <RLeak>520e6</RLeak>
        <refractory>12</refractory>
      </NeuronRange>

      <!-- Override single neuron 6 -->
      <Neuron index="6">
        <VTh>0.19</VTh>
      </Neuron>
    </Layer>
  </Architecture>
</NetworkConfig>
